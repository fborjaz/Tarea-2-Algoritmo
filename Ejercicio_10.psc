Algoritmo Peso_KG
	
	Definir Peso_Lib Como Real;
	
	PKG = 0.453592;
	PGM =  453.592;
	
	Escribir 'Ingrese su peso en libras: ';
	Leer Peso_Lib;
	
	Peso_k = Peso_Lib * PKG;
	Peso_G = Peso_Lib * PGM;
	
	
	
	Escribir 'Su peso en Kilogramo seria: ',Peso_k;
	Escribir '';
	Escribir 'Su peso en Gramo seria: ',Peso_G;
	
	
FinAlgoritmo
